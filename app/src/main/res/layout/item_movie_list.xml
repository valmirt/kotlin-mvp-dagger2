<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="6dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_poster_path"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/original_title_item_movie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/title_example"
                    android:textColor="#FFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:maxLines="2"/>
                <TextView
                    android:id="@+id/title_item_movie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/title_example"
                    android:textColor="#FFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/date_item_movie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/date_example"
                    android:textColor="#FFFF"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="@string/popularity"
                        android:textColor="#FFFF"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp" />
                    <TextView
                        android:id="@+id/popularity_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/popularity_example"
                        android:textColor="#FFFF"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vote_average"
                        android:layout_marginRight="8dp"
                        android:textColor="#FFFF"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp" />
                    <TextView
                        android:id="@+id/vote_average_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vote_average_example"
                        android:textColor="#FFFF"
                        android:textSize="14sp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/genres"
                    android:textColor="#FFFF"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/genre_1_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="22dp"
                    android:text="@string/genre_1_example"
                    android:textColor="#FFFF"
                    android:textSize="12sp"
                    android:layout_marginStart="22dp" />
                <TextView
                    android:id="@+id/genre_2_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="22dp"
                    android:text="@string/genre_2_example"
                    android:textColor="#FFFF"
                    android:textSize="12sp"
                    android:layout_marginStart="22dp" />
                <TextView
                    android:id="@+id/genre_3_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="22dp"
                    android:text="@string/genre_3_example"
                    android:textColor="#FFFF"
                    android:textSize="12sp"
                    android:layout_marginStart="22dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/image_item_movie"
                android:layout_width="@dimen/width_poster_path"
                android:layout_height="@dimen/height_poster_path"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_default_poster"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>